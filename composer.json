{
    "name": "wp-oop/events",
    "description": "A PSR-14 wrapper for the WP hook system.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii",
            "role": "Organisation"
        },
        {
            "name": "Anton Ukhanev",
            "email": "xedin.unknown@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2 | ^8.0",
        "psr/event-dispatcher": "^1.0",
        "dhii/event-interface": "^0.4"
    },
    "require-dev": {
        "10up/wp_mock": "^0.4",
        "phpunit/phpunit": "^8.0 | ^9.0",
        "ptrofimov/xpmock": "^1.1",
        "symfony/polyfill-php80": "^1.19",
        "vimeo/psalm": "^4.0",
        "slevomat/coding-standard": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "WpOop\\Events\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WpOop\\Events\\Tests\\Unit\\" : "tests/unit",
            "WpOop\\Events\\Tests\\Func\\" : "tests/functional"
        }
    }
